<div class="container">
  <div class="row justify-content-center">
    <div class="col-10  text-light">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.email_field :email, class: "form-control shadow ronded", placeholder: "Enter your e-mail" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow ronded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="container-fluid">
        <div class= "form-group row justify-content-center">
          <div class="col-6">
          <%= f.submit "Login", class: "btn btn-outline-light btn-block"%>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-6">
            <%= link_to "Cancel", articles_path, class: "btn btn-outline-danger btn-block" %>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>