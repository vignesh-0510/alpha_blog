<div class="container">
  <div class="row justify-content-center">
    <div class="col-10  text-light">
      <%= render 'shared/error_messages', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>

      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a Username" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.email_field :email, class: "form-control shadow ronded", placeholder: "Enter your e-mail" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
        <%= f.password_field :password, class: "form-control shadow ronded", placeholder: "Choose password" %>
        </div>
      </div>

      <div class="container-fluid">
        <div class= "form-group row justify-content-center">
          <div class="col-6">
          <%= f.submit(@user.new_record? ? "Sign Up": "Update account", class: "btn btn-outline-light btn-block")%>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-6">
            <%= link_to "Cancel", articles_path, class: "btn btn-outline-danger btn-block" %>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>