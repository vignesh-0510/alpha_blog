<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan = "3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |t| %>


    <tr>
      <td><%= t.title %></td>
      <td><%= t.description %></td>
      <td><%= link_to "Show", article_path(t) %></td>
      <td><%= link_to "Edit", edit_article_path(t) %></td>
      <td><%= link_to "Delete", article_path(t),method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>

    <%end%>
  </tbody>

</table>

<p>
  <%= link_to "Create Article", new_article_path %>
</p>